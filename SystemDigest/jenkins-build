env.VERSION_NUMBER = "1.2.${BUILD_NUMBER}"

node {
    stage 'Checkout'
        git url: 'https://github.com/DanGrew/SystemDigest.git'

    dir( 'SystemDigest' ) {
        stage 'Clean'
            sh "./gradlew clean"
            
        stage 'Compile Java'
            sh "./gradlew compileJava"
            
        stage 'Compile Tests'
            sh "./gradlew compileTestJava"
            
        stage 'Unit Tests'
            sh "./gradlew test"
            junit 'build/test-results/test/*.xml'

        stage 'Publish'
            sh "./gradlew bintrayUpload"
    
    }
}